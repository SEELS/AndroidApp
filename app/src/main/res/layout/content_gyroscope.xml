<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sameh.sensordatatest.Gyroscope"
    android:orientation="horizontal"
    >


    <TextView
        android:id="@+id/X_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="61dp"
        android:text="X: "
        android:textSize="60dp" />

    <EditText
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/X_"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/X_"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/Y_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/x"
        android:layout_marginTop="53dp"
        android:layout_toStartOf="@+id/x"
        android:text="Y: "
        android:textSize="60dp" />

    <EditText
        android:id="@+id/y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Y_view"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/Y_view"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/Z_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/y"
        android:layout_marginTop="53dp"
        android:layout_toStartOf="@+id/y"
        android:text="Z: "
        android:textSize="60dp" />

    <EditText
        android:id="@+id/z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Z_view"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/Z_view"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />
</RelativeLayout>
