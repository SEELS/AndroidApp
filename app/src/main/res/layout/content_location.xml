<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sameh.sensordatatest.LocationActivity"
    android:orientation="horizontal"
    >


    <TextView
        android:id="@+id/X_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="68dp"
        android:text="Latitude:"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Y_view"
        android:layout_toEndOf="@+id/X_"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/Y_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/X_"
        android:layout_below="@+id/X_"
        android:layout_marginTop="54dp"
        android:text="Longitude:"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/lon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Y_view"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/X_"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

</RelativeLayout>
